{
  "compilerOptions": {
    "types": ["vite/client", "vitest/globals"],
    "target": "es2020", 
    "jsx": "react-jsx",
    "module": "ES2020",
    "moduleResolution": "Bundler", 
    "noEmit": true,
    "isolatedModules": true, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "skipLibCheck": true,
    // "types": ["vitest/globals"]
  }
}